#!/bin/bash

NORMAL='\033[0m'
LBLUE='\033[01;34m'
BLUE='\033[00;34m'

SUB_DIRS=`ls -1`

for i in $SUB_DIRS
do
	if [ -d $PWD/$i/.git ]; then
		COLS=`tput cols`
		for ((col=0; col<$COLS; col++)); do echo -n "#"; done
		echo -e "\r##### ${LBLUE}$i${NORMAL}:${BLUE}$PWD/$i${NORMAL} "
		(cd $PWD/$i && git $*)
	fi
done
